model Meetup {
  id          Int                @id @default(autoincrement())
  title       String
  description String
  dateTime    DateTime
  location    String
  organizers  MeetupOrganizer[]
  participants MeetupParticipant[]
  tags        MeetupTag[]
}

model Tag {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  meetups MeetupTag[]
}

model MeetupOrganizer {
  meetupId Int
  userId   Int
  meetup   Meetup @relation(fields: [meetupId], references: [id])
  user     User   @relation(fields: [userId], references: [id])

  @@id([meetupId, userId])
}

model MeetupParticipant {
  meetupId Int
  userId   Int
  meetup   Meetup @relation(fields: [meetupId], references: [id])
  user     User   @relation(fields: [userId], references: [id])

  @@id([meetupId, userId])
}

model MeetupTag {
  meetupId Int
  tagId    Int
  meetup   Meetup @relation(fields: [meetupId], references: [id])
  tag      Tag    @relation(fields: [tagId], references: [id])

  @@id([meetupId, tagId])
}